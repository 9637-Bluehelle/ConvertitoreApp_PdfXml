{
  "compilerOptions": {
    "target": "ES2017",                                 // JS moderno
    "lib": ["dom", "es2017"],                           // API browser + ES2017
    "module": "esnext",                                 // Import/export moderni
    "moduleResolution": "node",                         // Risoluzione stile Node
    "jsx": "react-jsx",                                 // JSX per React 17+
    "strict": true,                                     // Controlli rigidi
    "esModuleInterop": true,                            // Compatibilità moduli CommonJS
    "skipLibCheck": true,                               // Salta check nei types esterni
    "forceConsistentCasingInFileNames": true,           // Case-sensitive nei path
    "resolveJsonModule": true,                          // Permette import di JSON
    "isolatedModules": true,                            // Ogni file è un modulo
    "noEmit": false,                                    // Compila file
    "noUnusedLocals": true,                             // Segnala variabili inutilizzate
    "noUnusedParameters": true,                         // Segnala parametri inutilizzati
    "typeRoots": ["./src/types", "./node_modules/@types"], // Tipi personalizzati
    "paths": {
      "assets/*": ["./assets/*"],                       // Alias per assets
      "*": ["./src/*"]                                  // Alias per src
    }
  },
  "include": ["src/**/*.ts", "src/**/*.tsx", "types/**/*.d.ts"], // File inclusi
  "exclude": ["node_modules"]                           // Cartelle escluse
}